<section class="post">
  <h2>Post <%= "#{post.id}: #{post.title}" %></h2>
  <div class="post"><%= post.body %></div>
  <%= render 'post_nav', post: post %>
  <% @comments = post.comments.paginate(:page => params[:page], :per_page => 5) %>
  <%= render @comments %>
  <%= will_paginate @comments, :class =>"pagination" %>
</section>
